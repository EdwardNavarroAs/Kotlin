<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    ─────────────────────────────────────────────────────────────
    TEMA OSCURO PRINCIPAL DE LA APLICACIÓN
    ─────────────────────────────────────────────────────────────
    Se aplica automáticamente cuando el sistema está en "Modo oscuro".
    Define colores más apagados para cuidar la visibilidad nocturna.
    ─────────────────────────────────────────────────────────────
    -->
    <style name="Base.Theme.XmlKotlin" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo general -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>

        <!-- Barras transparentes para edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
