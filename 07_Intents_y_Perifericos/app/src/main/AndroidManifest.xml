<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ────────────────────────────────────────────────
         PERMISOS UTILIZADOS EN EL CAPÍTULO 2
         ──────────────────────────────────────────────── -->

    <!-- 1. CÁMARA -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 2. LECTURA DE IMÁGENES / ARCHIVOS
         - En Android 13+ se usa READ_MEDIA_IMAGES.
         - En Android ≤ 12 (API 32) se usa READ_EXTERNAL_STORAGE. -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- 3. CONTACTOS (sección opcional: seleccionar contacto) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- 4. AUDIO (sección opcional: grabar sonido o video con audio) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 5. NOTIFICACIONES (opcional: mostrar notificación tras acción) -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <!-- 6. UBICACIÓN (opcional: asociar ubicación a foto o evento) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <!-- ────────────────────────────────────────────────
         DECLARACIÓN DE HARDWARE
         ────────────────────────────────────────────────
         La cámara es opcional (para que la app se instale incluso en
         dispositivos sin cámara física, como emuladores o tablets).
    -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />


    <!-- ────────────────────────────────────────────────
         APLICACIÓN
         ──────────────────────────────────────────────── -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JC_Intents">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JC_Intents">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ────────────────────────────────────────────────
             FILE PROVIDER (para guardar fotos en cache y compartirlas
             con la app de cámara cuando usemos TakePicture(uri))
             ──────────────────────────────────────────────── -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
